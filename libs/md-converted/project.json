{
  "name": "md-converted",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/md-converted/src",
  "prefix": "md-converted",
  "projectType": "library",
  "tags": [],
  "targets": {
    "pre-build": {
      "executor": "nx:run-commands",
      "inputs": ["{workspaceRoot}/libs/md-converted/src/mds/*.md"],
      "outputs": ["{workspaceRoot}/libs/md-converted/src/lib/*.component.html"],
      "options": {
        "command": "tsx libs/md-converted/pre-build/convert-md-to-template.ts",
        "color": true
      }
    },
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "inputs": [
        "{workspaceRoot}/libs/md-converted/src/mds/*.md",
        {
          "dependentTasksOutputFiles": "{workspaceRoot}/libs/md-converted/src/lib/*.component.html",
          "transitive": true
        }
      ],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/md-converted/ng-package.json",
        "tsConfig": "libs/md-converted/tsconfig.lib.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/md-converted/tsconfig.lib.prod.json"
        },
        "development": {}
      },
      "defaultConfiguration": "production",
      "dependsOn": ["pre-build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
